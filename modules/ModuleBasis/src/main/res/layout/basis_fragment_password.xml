<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.deti.basis.login.password.PasswordViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30mm"
        android:paddingRight="30mm">

        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20mm"
            android:background="@drawable/base_edit_gray_bg"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="12mm"
                android:text="+86"
                android:textColor="#333333" />

            <View
                android:layout_width="2mm"
                android:layout_height="14mm"
                android:layout_gravity="center_vertical"
                android:background="#B3B3B3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLines="2"
                android:padding="12mm"
                android:textColor="#333333" />
        </LinearLayout>

        <EditText
            android:id="@+id/basis_et_password"
            android:layout_width="0mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="15mm"
            android:background="@drawable/base_edit_gray_bg"
            android:hint="请输入密码"
            android:padding="12mm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_phone" />

        <LinearLayout
            android:id="@+id/basis_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15mm"
            android:background="@drawable/base_edit_gray_bg"
            android:orientation="horizontal"
            android:padding="12mm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/basis_et_password">

            <TextView
                android:layout_width="0mm"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="品牌商"
                android:inputType="phone"
                android:maxLines="2"
                android:textColor="#333333"
                android:textSize="14mm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/basis_arrow_right"
                android:drawablePadding="10mm"
                android:text="请选择"
                android:textColor="#CCCCCC" />

        </LinearLayout>

        <TextView
            android:padding="10mm"
            android:id="@+id/basis_tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textColor="#4389F1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basis_linearlayout" />


        <TextView
            android:padding="10mm"
            android:onClick="@{viewModel.clickToPageRegister}"
            android:id="@+id/basis_tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:textColor="#333333"
            app:layout_constraintBottom_toBottomOf="@+id/basis_tv_forget_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/basis_tv_forget_password" />

        <TextView
            android:onClick="@{viewModel.clickToLogin}"
            android:id="@+id/basis_tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50mm"
            android:background="@drawable/base_btn_yellow_bg"
            android:gravity="center"
            android:padding="12mm"
            android:text="登录"
            android:textColor="#1B2643"
            android:textSize="18mm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basis_tv_register" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>