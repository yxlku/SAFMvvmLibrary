<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
>

    <data>
        <variable
            name="viewModel"
            type="com.deti.basis.login.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:isDamp="@{true}"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:textSize="14mm"
            android:id="@+id/basis_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{viewModel.clickShowToastLeft}"
            android:text="显示左侧Icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:textSize="14mm"
            android:id="@+id/basis_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{viewModel.clickShowToastRight}"
            android:text="显示右侧Icon"
            app:layout_constraintBottom_toBottomOf="@+id/basis_button2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/basis_button2"
            app:layout_constraintTop_toTopOf="@+id/basis_button2"
             />

        <Button
            android:textSize="14mm"
            android:onClick="@{viewModel.clickShowToast}"
            android:id="@+id/basis_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不显示图标"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>