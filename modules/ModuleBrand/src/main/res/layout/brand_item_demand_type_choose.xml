<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.safmvvm.utils.encrypt.base.TextUtils" />

        <import type="android.view.View" />

        <variable
            name="entity"
            type="com.deti.brand.demand.create.item.demandtype.ItemDeamandTypeChooseEntity" />

        <variable
            name="viewModel"
            type="com.deti.brand.demand.create.CreateDemandViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_top_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16mm"
        android:layout_marginTop="20mm"
        android:layout_marginEnd="16mm"
        android:background="@drawable/base_bg_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="10mm"
        android:paddingTop="15mm"
        android:paddingEnd="10mm"
        android:paddingBottom="15mm"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_text"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="270mm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text='@{TextUtils.isEmpty(entity.showText)? "选择已有信息" : entity.showText}'
            android:textSize="14mm"
            android:textStyle="bold" />

        <TextView
            app:layout_constraintStart_toEndOf="@id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility='@{TextUtils.isEmpty(entity.showText)? View.VISIBLE : View.GONE}'
            android:text="*"
            android:textSize="16mm"
            android:textColor="#FE3A4A"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_alignParentEnd="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/brand_memand_create_arrow_gray"
            android:drawablePadding="2mm"
            android:text="请选择"
            android:textColor="#CCCCCC" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>