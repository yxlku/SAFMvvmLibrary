<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.deti.brand.main.odm.demand.ODMViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_tab_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="60mm" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0mm"
            android:background="#1F2438"
            app:layout_constraintBottom_toBottomOf="@id/gl_tab_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="match_parent"
            android:layout_height="48mm"
            android:src="@drawable/brand_odm_title_bg"
            app:layout_constraintBottom_toTopOf="@id/gl_tab_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/mi_tab"
            android:layout_width="match_parent"
            android:layout_height="0mm"
            app:layout_constraintBottom_toBottomOf="@id/iv_title"
            app:layout_constraintEnd_toEndOf="@id/iv_title"
            app:layout_constraintStart_toStartOf="@id/iv_title"
            app:layout_constraintTop_toTopOf="@id/iv_title" />

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="0mm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gl_tab_line" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>