<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="entity"
            type="com.deti.brand.demand.create.item.personinfo.ItemPersonalInfoEntity" />

        <variable
            name="viewMolde"
            type="com.deti.brand.demand.create.item.personinfo.ItemPersonalViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginStart="16mm"
        android:layout_marginEnd="16mm"
        android:id="@+id/ll_top_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20mm"
        android:background="@drawable/brand_demand_create_info_tip"
        android:orientation="horizontal"
        android:padding="10mm"
        android:visibility="visible">

        <TextView
            android:id="@+id/brand_textview4"
            android:layout_width="0mm"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.2"
            android:text="欢迎来到得体，不要忘记完善\n信息后再提交需求哦！~" />

        <TextView
            android:onClick="@{viewMolde.clickToPerfectPersonalPage}"
            android:id="@+id/brand_textview5"
            android:layout_width="wrap_content"
            android:layout_height="34mm"
            android:layout_gravity="center_vertical"
            android:background="@drawable/base_btn_yellow_bg"
            android:gravity="center"
            android:paddingStart="10mm"
            android:paddingEnd="10mm"
            android:text="去完善信息" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>