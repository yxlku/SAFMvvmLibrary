<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="entity"
            type="com.deti.brand.demand.create.item.pic.ItemPicChooseEntity" />

        <variable
            name="viewModel"
            type="com.deti.brand.demand.create.item.pic.ItemPicChooseViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20mm"
        android:background="#00000000">


        <TextView
            android:id="@+id/brand_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16mm"
            android:text="请上传图片 *"
            android:textColor="#1B2643"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginEnd="16mm"
            android:id="@+id/brand_textview6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至少上传3张"
            android:textColor="#BBBBBB"
            android:textSize="12mm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pics"
            android:layout_width="match_parent"
            android:layout_height="195mm"
            android:layout_marginTop="10mm"
            android:layout_marginStart="10mm"
            android:layout_marginEnd="10mm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/brand_textview2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>