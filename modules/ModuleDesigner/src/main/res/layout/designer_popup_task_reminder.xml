<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_dialog_title_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20mm"
            app:srcCompat="@drawable/base_dialog_title_close" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0mm"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="任务提醒"
            android:textColor="#333333"
            android:textSize="14mm" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/iv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20mm"
            android:visibility="invisible"
            app:srcCompat="@drawable/base_dialog_tip" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/ll_title"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.xiaofeidev.round.RoundImageView
            android:id="@+id/iv_one"
            android:layout_width="60mm"
            android:layout_height="60mm"
            android:layout_marginTop="27mm"
            android:adjustViewBounds="true"
            app:srcCompat="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/iv_two"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rd_radius="circle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/iv_one"
            app:layout_constraintEnd_toStartOf="@id/iv_two"
            app:layout_constraintStart_toEndOf="@id/iv_one"
            app:layout_constraintTop_toTopOf="@id/iv_one"
            app:srcCompat="@mipmap/desinger_popup_task_add" />

        <com.github.xiaofeidev.round.RoundImageView
            android:id="@+id/iv_two"
            android:layout_width="60mm"
            android:layout_height="60mm"
            android:layout_marginStart="5mm"
            android:layout_marginTop="27mm"
            android:adjustViewBounds="true"
            app:srcCompat="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/iv_three"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_one"
            app:layout_constraintTop_toTopOf="parent"
            app:rd_radius="30mm" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/iv_two"
            app:layout_constraintEnd_toStartOf="@id/iv_three"
            app:layout_constraintStart_toEndOf="@id/iv_two"
            app:layout_constraintTop_toTopOf="@id/iv_two"
            app:srcCompat="@mipmap/desinger_popup_task_add" />

        <com.github.xiaofeidev.round.RoundImageView
            android:id="@+id/iv_three"
            android:layout_width="60mm"
            android:layout_height="60mm"
            android:layout_marginStart="5mm"
            android:layout_marginTop="27mm"
            android:adjustViewBounds="true"
            app:srcCompat="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_two"
            app:layout_constraintTop_toTopOf="parent"
            app:rd_radius="30mm" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22mm"
            android:text="添加物料"
            app:layout_constraintEnd_toEndOf="@id/iv_one"
            app:layout_constraintStart_toStartOf="@id/iv_one"
            app:layout_constraintTop_toBottomOf="@id/iv_one" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22mm"
            android:text="完善版单"
            app:layout_constraintEnd_toEndOf="@id/iv_two"
            app:layout_constraintStart_toStartOf="@id/iv_two"
            app:layout_constraintTop_toBottomOf="@id/iv_two" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22mm"
            android:text="完成款式"
            app:layout_constraintEnd_toEndOf="@id/iv_three"
            app:layout_constraintStart_toStartOf="@id/iv_three"
            app:layout_constraintTop_toBottomOf="@id/iv_three" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23mm"
            android:layout_marginBottom="43mm"
            android:background="@drawable/base_btn_gray_bg"
            android:paddingStart="31mm"
            android:paddingTop="9mm"
            android:paddingEnd="31mm"
            android:paddingBottom="9mm"
            android:text="取消"
            android:textColor="#B31F2438"
            app:layout_constraintEnd_toStartOf="@+id/tv_sure"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_one" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23mm"
            android:layout_marginBottom="43mm"
            android:background="@drawable/base_btn_yellow_bg"
            android:paddingStart="16mm"
            android:paddingTop="9mm"
            android:paddingEnd="16mm"
            android:paddingBottom="9mm"
            android:text="确认抢单"
            android:textColor="#1F2438"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_cancel"
            app:layout_constraintTop_toBottomOf="@id/tv_one" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>