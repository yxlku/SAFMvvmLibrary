<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="entity"
            type="com.deti.designer.style.entity.StyleListEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8mm"
        android:background="#FFFFFF"
        android:paddingStart="16mm"
        android:paddingTop="20mm">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_style_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="款号：3742393"
            android:textColor="#1B2643"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10mm"
            android:text="客户：广东爱依服商贸有限公司"
            android:textColor="#1B2643"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_style_num" />

        <com.github.xiaofeidev.round.RoundImageView
            android:id="@+id/iv_img"
            android:layout_width="100mm"
            android:layout_height="110mm"
            android:layout_marginTop="15mm"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_client"
            app:rd_radius="4mm" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_info"
            android:layout_width="0mm"
            android:layout_height="wrap_content"
            android:layout_marginStart="20mm"
            app:layout_constraintBottom_toBottomOf="@id/iv_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_img"
            app:layout_constraintTop_toTopOf="@id/iv_img">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女士、服装、套装、礼服"
                android:textSize="12mm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10mm"
                android:text="名称："
                android:textColor="#666666"
                android:textSize="12mm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_style" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="高级袜子"
                android:textSize="12mm"
                app:layout_constraintStart_toEndOf="@id/tv_name_title"
                app:layout_constraintTop_toTopOf="@id/tv_name_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_version_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10mm"
                android:text="版型："
                android:textColor="#666666"
                android:textSize="12mm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="修身"
                android:textSize="12mm"
                app:layout_constraintStart_toEndOf="@id/tv_version_title"
                app:layout_constraintTop_toTopOf="@id/tv_version_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_year_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10mm"
                android:text="年份/季节："
                android:textColor="#666666"
                android:textSize="12mm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_version_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="夏季"
                android:textSize="12mm"
                app:layout_constraintStart_toEndOf="@id/tv_year_title"
                app:layout_constraintTop_toTopOf="@id/tv_year_title" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1mm"
            android:layout_marginTop="20mm"
            android:background="#F3F3F3"
            app:layout_constraintTop_toBottomOf="@id/iv_img" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_person_info"
            android:layout_width="match_parent"
            android:layout_height="30mm"
            android:layout_marginTop="10mm"
            android:background="@drawable/designer_bg_gray_round"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/v_line">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10mm"
                android:text="设计师："
                android:textColor="#666666"
                android:textSize="12mm" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="longpc"
                android:textColor="#1B2643"
                android:textSize="12mm" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15mm"
                android:text="版师："
                android:textColor="#666666"
                android:textSize="12mm" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版版"
                android:textColor="#1B2643"
                android:textSize="12mm" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15mm"
                android:text="工艺师："
                android:textColor="#666666"
                android:textSize="12mm" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阿艺"
                android:textColor="#1B2643"
                android:textSize="12mm" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_version_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10mm"
            android:text="版单"
            android:textColor="#333333"
            android:textSize="12mm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_person_info" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_version_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_version_list_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:paddingTop="30mm"
            android:paddingBottom="20mm"
            android:paddingStart="16mm"
            app:layout_constraintTop_toBottomOf="@id/rv_version_list" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>