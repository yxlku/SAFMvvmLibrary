<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="20mm"
    android:paddingBottom="46mm"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cancel"
        android:layout_width="96mm"
        android:layout_height="40mm"
        android:background="@drawable/base_btn_gray_bg"
        android:gravity="center"
        android:text="取消"
        android:textColor="#1F2438"
        android:textSize="14mm"
        app:layout_constraintEnd_toStartOf="@+id/tv_submit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_submit"
        android:layout_width="96mm"
        android:layout_height="40mm"
        android:background="@drawable/base_btn_yellow_bg"
        android:gravity="center"
        android:text="确定推送"
        android:textColor="#1F2438"
        android:textSize="14mm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_cancel"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>