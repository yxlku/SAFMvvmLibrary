<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.deti.designer.version.VersionListViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20mm"
                android:paddingBottom="5mm"
                android:text="版单列表"
                android:textSize="16mm"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_list_title_count"
                android:layout_width="0mm"
                android:layout_height="wrap_content"
                android:layout_marginStart="2mm"
                android:text="(共2354条)"
                android:textColor="#999999"
                android:textSize="13mm"
                app:layout_constraintEnd_toStartOf="@id/tv_list_title_filter"
                app:layout_constraintStart_toEndOf="@id/tv_list_title"
                app:layout_constraintTop_toTopOf="@id/tv_list_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_list_title_filter"
                android:layout_width="0mm"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20mm"
                android:drawableLeft="@mipmap/designer_main_list_title_filter"
                android:drawablePadding="6mm"
                android:text="筛选"
                android:textColor="#666666"
                android:textSize="13mm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_list_title" />

            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/mi_tab"
                android:layout_width="match_parent"
                android:layout_height="40mm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_list_title" />

            <View
                android:layout_marginTop="10mm"
                android:id="@+id/v_line"
                android:layout_width="match_parent"
                android:layout_height="1mm"
                android:background="#E6E6E6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mi_tab" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="0mm"
            android:layout_weight="1" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>