<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="entity"
            type="com.deti.designer.style.popup.item.other.ItemOtherEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_craft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F8F8"
            android:padding="16mm"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打版工艺"
                android:textColor="#333333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5mm"
                android:gravity="center"
                android:text="*"
                android:textColor="#F74B60"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toEndOf="@id/tv_title"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14mm"
                android:background="@drawable/base_bg_white"
                android:gravity="left"
                android:hint="请输入打版工艺"
                android:minHeight="78mm"
                android:padding="10mm"
                android:textColorHint="#33666666"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tv_img_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16mm"
            android:layout_marginTop="16mm"
            android:text="图片"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_craft" />

        <com.github.xiaofeidev.round.RoundFrameLayout
            android:id="@+id/rfl_img"
            android:layout_width="84mm"
            android:layout_height="84mm"
            android:layout_marginStart="15mm"
            android:layout_marginTop="16mm"
            app:layout_constraintStart_toEndOf="@id/tv_img_title"
            app:layout_constraintTop_toBottomOf="@id/cl_craft">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/base_pic_choose_bg" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/base_pic_add" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="10mm"
                android:src="@mipmap/base_pic_del" />
        </com.github.xiaofeidev.round.RoundFrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="43mm"
            android:layout_marginTop="30mm"
            android:id="@+id/tv_cancel"
            android:layout_width="96mm"
            android:layout_height="40mm"
            android:background="@drawable/base_btn_gray_bg"
            android:gravity="center"
            android:text="取消"
            app:layout_constraintEnd_toStartOf="@+id/tv_submit"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rfl_img" />

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="43mm"
            android:id="@+id/tv_submit"
            android:layout_width="96mm"
            android:layout_height="40mm"
            android:background="@drawable/base_btn_yellow_bg"
            android:gravity="center"
            android:text="完成"
            app:layout_constraintTop_toTopOf="@id/tv_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_cancel"
             />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>