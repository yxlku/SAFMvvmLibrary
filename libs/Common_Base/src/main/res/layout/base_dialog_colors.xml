<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#00000000"
    android:orientation="vertical">

    <com.safmvvm.ui.titlebar.TitleBar
        android:id="@+id/tb_title"
        style="@style/popup_title_bottom"
        app:backButton="false"
        app:leftIcon="@null"
        app:rightColor="#2171E8"
        app:rightTitle="确定" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24mm"
            android:paddingTop="14mm"
            android:paddingBottom="14mm"
            android:text="已选的颜色："
            android:textColor="#1B2643"
            android:textSize="14mm" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_selected"
            android:layout_width="0mm"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="8mm"
        android:background="#F8F8F8" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_left"
            android:layout_width="0mm"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:showLabel="true"
            app:textSize="18mm"
            app:themeColor="#1F2438" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_right"
            android:layout_width="0mm"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:showLabel="true"
            app:textSize="18mm"
            app:themeColor="#1F2438" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>