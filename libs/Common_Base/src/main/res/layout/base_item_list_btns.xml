<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.safmvvm.utils.ResUtil"/>
        <variable
            name="entity"
            type="com.test.common.adapter.CommonListBtnsEntity" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_btns"
            android:layout_width="80mm"
            android:layout_height="32mm"
            android:layout_marginEnd="20mm"
            android:background="@{ResUtil.INSTANCE.getDrawable(entity.btnBg)}"
            android:gravity="center"
            android:text="@{entity.text}" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>